<h1><%= @doctor.name %></h1>
<h2><%= @doctor.department %></h2>

<ul>
    <% @doctor.appointments.each do |appt| %>
        <li><%= link_to appt.patient.name, appt.patient%>
        <%= appt.appointment_datetime.strftime("%B %d, %Y at %H:%M") %></li>
    <% end %>
</ul>



